{
  "expo": {
    "name": "Books Pointer",
    "slug": "books-pointer",
    "version": "3.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bookspointer",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.monoranjan.bookspointer"
    },
    "android": {
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "data": [
            {
              "scheme": "bookspointer",
              "host": "oauth2redirect"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.monoranjan.bookspointer",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "@react-native-google-signin/google-signin",
      "expo-router",
      "expo-notifications",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-web-browser",
      "expo-sqlite",
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/kalpurush.ttf", "./assets/fonts/kalpurush-ansi.ttf"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5a76b2dc-30dc-4701-a88c-d837cf10eed1"
      },
      "googleClientId": {
        "web": "995445721362-vs6lio6ova5qedcotndpik6c6olg4ohp.apps.googleusercontent.com",
        "android": "995445721362-r65gla5rolu5t9e92n73jgcb5fiptg01.apps.googleusercontent.com"
      }
    }
  }
}
